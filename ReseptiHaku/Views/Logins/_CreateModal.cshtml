@model ReseptiHaku.Models.Logins

<div class="modal fade" id="CreateModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1>Luo käyttäjätunnus ja salasana</h1>
            </div>
            <div class="modal-body">
                <p>Anna käyttäjätunnus ja salasana.</p>

                @using (Html.BeginForm("Create", "Logins", FormMethod.Post, new { id = "createForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @*<h4>Logins</h4>*@
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PassWord, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @*nämäkään buttonit eivät renderöidy oikein class-määrityksen kanssa*@

                                @*<input type="submit" value="Create" class="btn btn-default" />
                                <button type="submit" class="btn btn-primary" form="createForm"></button>*@
                            </div>
                        </div>
                    </div>
                }


            <div class="modal-footer">
                @*toistaiseksi muotoiluna fas-ikonit, koska muutoin renderöityivät omituisesti vailla muotoilua - footerista johtuva?*@

                @*Formin lähettävä button, joka ei kuitenkaan ole formin sisällä, mutta viittaa formin ID:hen*@
                <button type="submit" class="btn btn-primary" form="createForm"><i class="fas fa-check"></i></button>

                @*Kontrollerin kutsu Url.Action -komennolla, jotta peruuttaminen johtaa takaisin /Home/Index -näkymään*@
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary"><i class="fas fa-times"></i></a>

                @*<button type="button" class="btn btn-danger" data-dismiss="modal">Sulje</button>*@

            </div>
            </div>
        </div>
    </div>
</div>
