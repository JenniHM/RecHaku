<p>
    <button type="button" id="buttonCreate" class="btn btn-primary">Luo uusi käyttäjätunnus (modal)</button>
    @Html.ActionLink("Peruuta", "Index", "Home", null, new { @class = "btn btn-danger" })

</p>

